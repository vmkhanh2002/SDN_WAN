{
  "network_policies": {
    "wifi": {
      "ssid": "LLMThings_IoT",
      "security_type": "WPA2-PSK",
      "password": "SecureNetworkPassword123!",
      "channel": "auto",
      "bandwidth": "40MHz",
      "power_save": {
        "enabled": true,
        "mode": "modem_sleep",
        "listen_interval": 1
      },
      "roaming": {
        "enabled": true,
        "rssi_threshold": -70
      }
    },
    "mqtt_broker": {
      "primary": {
        "host": "192.168.1.200",
        "port": 1883,
        "protocol": "MQTT",
        "tls_enabled": false,
        "qos": 1,
        "keepalive_seconds": 60
      },
      "secondary": {
        "host": "192.168.1.201",
        "port": 1883,
        "protocol": "MQTT",
        "tls_enabled": false,
        "qos": 1,
        "keepalive_seconds": 60
      },
      "secure": {
        "enabled": true,
        "port": 8883,
        "protocol": "MQTT/TLS",
        "certificate_validation": true,
        "client_certificate_required": false
      }
    },
    "gateway": {
      "ip": "192.168.1.1",
      "dns_servers": [
        "8.8.8.8",
        "8.8.4.4"
      ],
      "subnet_mask": "255.255.255.0",
      "ntp_servers": [
        "pool.ntp.org",
        "time.nist.gov"
      ]
    },
    "protocols": {
      "wifi": {
        "enabled": true,
        "auto_connect": true,
        "reconnect_policy": "exponential_backoff"
      },
      "ble": {
        "enabled": false,
        "advertising_interval_ms": 100,
        "power_level": -12
      },
      "zigbee": {
        "enabled": false,
        "channel": 15,
        "pan_id": "0x1234"
      },
      "thread": {
        "enabled": false,
        "channel": 15,
        "pan_id": "0x5678"
      }
    }
  },
  "device_profiles": {
    "esp32_wroom": {
      "mcu": "ESP32-WROOM-32",
      "flash_size": "4MB",
      "ram_size": "520KB",
      "wifi": {
        "standards": ["802.11 b/g/n"],
        "max_power": 20
      },
      "bluetooth": {
        "standards": ["BLE 5.0"],
        "max_power": 10
      },
      "recommended_configuration": {
        "clock_speed_mhz": 160,
        "wifi_power_save": "modem_sleep",
        "sleep_mode": "light_sleep"
      }
    },
    "esp32_s3": {
      "mcu": "ESP32-S3",
      "flash_size": "8MB",
      "ram_size": "512KB",
      "wifi": {
        "standards": ["802.11 b/g/n/ax"],
        "max_power": 22
      },
      "bluetooth": {
        "standards": ["BLE 5.3"],
        "max_power": 12
      },
      "recommended_configuration": {
        "clock_speed_mhz": 240,
        "wifi_power_save": "none",
        "sleep_mode": "deep_sleep"
      }
    },
    "esp32_c6": {
      "mcu": "ESP32-C6",
      "flash_size": "4MB",
      "ram_size": "320KB",
      "wifi": {
        "standards": ["802.11 b/g/n"],
        "max_power": 20
      },
      "ieee802_15_4": {
        "standards": ["Thread", "Zigbee"],
        "max_power": 20
      },
      "recommended_configuration": {
        "clock_speed_mhz": 160,
        "wifi_power_save": "modem_sleep",
        "sleep_mode": "deep_sleep"
      }
    }
  },
  "connectivity_monitoring": {
    "heartbeat": {
      "enabled": true,
      "interval_seconds": 300,
      "timeout_seconds": 60,
      "retry_count": 3,
      "failure_action": "mark_offline"
    },
    "signal_strength": {
      "tracking_enabled": true,
      "rssi_threshold_warning": -70,
      "rssi_threshold_critical": -80,
      "action_on_weak_signal": "increase_transmission_power"
    },
    "latency_monitoring": {
      "enabled": true,
      "acceptable_latency_ms": 100,
      "alert_threshold_ms": 500
    }
  },
  "network_optimization": {
    "bandwidth_management": {
      "total_bandwidth_mbps": 150,
      "reservation_policy": "fair_share",
      "device_quotas": {
        "camera": "30%",
        "sensor": "20%",
        "actuator": "10%",
        "display": "20%",
        "other": "20%"
      }
    },
    "traffic_prioritization": {
      "enabled": true,
      "priority_levels": {
        "critical": {
          "description": "Fall detection alerts, emergency signals",
          "queue_priority": 1
        },
        "high": {
          "description": "Video streaming, real-time monitoring",
          "queue_priority": 2
        },
        "normal": {
          "description": "Periodic sensor readings, standard control",
          "queue_priority": 3
        },
        "low": {
          "description": "Logging, statistics collection",
          "queue_priority": 4
        }
      }
    }
  },
  "security_policies": {
    "authentication": {
      "method": "certificate_based",
      "certificate_type": "X.509",
      "certificate_validity_days": 365,
      "mutual_tls": true
    },
    "encryption": {
      "tls_enabled": true,
      "tls_version": "1.3",
      "cipher_suites": [
        "TLS_AES_256_GCM_SHA384",
        "TLS_CHACHA20_POLY1305_SHA256"
      ],
      "certificate_pinning": true
    },
    "firewall_rules": {
      "default_policy": "deny",
      "allowed_protocols": [
        "MQTT",
        "MQTT/TLS",
        "HTTP",
        "HTTPS"
      ],
      "blocked_ports": [
        23,
        25,
        110,
        143
      ]
    }
  },
  "provisioning": {
    "zero_touch_provisioning": {
      "enabled": true,
      "method": "qr_code",
      "information_included": [
        "ssid",
        "password",
        "device_id",
        "certificate"
      ]
    },
    "first_connection": {
      "expected_time_seconds": 30,
      "timeout_seconds": 120,
      "auto_configuration": true
    }
  },
  "maintenance": {
    "log_collection": {
      "enabled": true,
      "interval_seconds": 3600,
      "retention_days": 30,
      "compression": "gzip"
    },
    "configuration_backup": {
      "enabled": true,
      "interval_days": 7,
      "retention_copies": 4
    },
    "firmware_updates": {
      "check_interval_seconds": 3600,
      "auto_apply_security_patches": true,
      "maintenance_window": "Sunday 02:00 UTC"
    }
  }
}
